<div class="contain-center">
<h1>Profile</h1>
<h3 class="flex-item-users">{{user.username}}</h3>
{{#each user.xperiences}}
<ul class="flex-item-xperiences">
  <li>{{this.name}}
    <a class="flex-item-users" href="/xperience/{{this.id}}">xperience</a>
  </li>
  </ul>
{{/each}}
{{#if editable}}
<form  method='POST' action='/profile'>
  <p class="flex-item-users">Update profile</p>
  <input class="flex-item-users" type="text" name="username" value="{{user.username}}" placeholder="User">
  <input class="flex-item-users" type="password" name="password" placeholder="Password">
  <button  class="flex-item-users"id="update-user">Edit</button>
{{#if message }}
  <div class="error-message flex-item-users">{{ message }}</div>
{{/if}}
{{/if}}
</form>
</div>

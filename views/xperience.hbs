<script>
  window.xperienceName = {{{xperienceName}}}
  window.xperience = {{{xperience}}}
  window.samples = {{{samples}}}
  window.enableSave = {{{enableSave}}}
  window.melodies = {{{melodies}}}
  loadXperience(xperience,samples,xperienceName,enableSave,melodies)
</script>

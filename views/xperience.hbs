<script src="https://aframe.io/releases/0.9.0/aframe.min.js"></script>
<script src="/javascripts/loadXperience.js"></script>
<a-scene>
  <a-assets>
    <img id="exit" src="/images/exit.png">
    <img id="save" src="/images/save.png">
  </a-assets>
  <a-camera>
    <a-cursor></a-cursor>
  </a-camera>
  <a-entity laser-controls line="color: red; opacity: 0.75"></a-entity>
  <a-entity tracked-controls="controller: 0; idPrefix: OpenVR"></a-entity>
  
  
  <a-sphere class="active" id="ambientMelody" color="#A2238D" position="-4 6 -6" radius="0.7"></a-sphere>
  <a-sphere class="inactive" id="electroMelody" color="#CCC" position="0 6 -6" radius="0.7"></a-sphere>
  <a-sphere class="inactive" id="technoMelody" color="#CCC" position="4 6 -6" radius="0.7"></a-sphere>

  
  <a-image src="#exit" position="-6.5 2.1 -2.2" width="0.7" height="0.7" rotation="0 60 0"></a-image>
  <a-image src="#save" position="6.5 2.1 -2.2" width="0.7" height="0.7" rotation="0 -60 0"></a-image>

  

  <a-entity id="xperience-ent">

   
  </a-entity>
  
  <a-entity id="save-btn-ent">
    <a-box id="save-btn" position="6 1 -2" rotation="30 120 0" color="#00FF00"></a-box>
  </a-entity>
  <a-entity id="exit-btn-ent">
    <a-box id="exit-btn" position="-6 1 -2" rotation="30 240 0" color="#FF0000"></a-box>
  </a-entity>

  {{!-- <a-plane position="0 -1 -4" rotation="-90 0 0" width="30" height="30" color="#444444"></a-plane>   --}}
  <a-cylinder color="#666666" position="0 -1 0" width="6" height="2" radius="4"segments-radial="8"></a-cylinder>
  <a-sky color="#222222"></a-sky>
  
</a-scene>
<script>
  window.xperienceName = {{{xperienceName}}}
  window.xperience = {{{xperience}}}
  window.samples = {{{samples}}}
  window.enableSave = {{{enableSave}}}
  window.melodies = {{{melodies}}}
  loadXperience(xperience,samples,xperienceName,enableSave,melodies)
</script>

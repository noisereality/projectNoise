<script src="https://aframe.io/releases/0.9.0/aframe.min.js"></script>
<script src="/javascripts/loadXperience.js"></script>
<a-scene>
  <a-camera>
    <a-cursor></a-cursor>
  </a-camera>
  <a-entity laser-controls line="color: red; opacity: 0.75"></a-entity>
  <a-entity tracked-controls="controller: 0; idPrefix: OpenVR"></a-entity>
  {{!-- <a-entity light="type:directional; castShadow:true;" position="2 5 1"></a-entity> --}}
  {{!-- <a-light type="spot" color="#FFFFFF" position="-10 10 0" look-at="#cen"></a-light>
  <a-light class="foco" type="point" color="#0000FF" position="10 20 10"></a-light> --}}

  <a-entity id="xperience-ent">
    <a-entity id="loop-ent">
      <a-box position="-4 6 -5" rotation="0 0 0" color="#CCCCCC"></a-box>
      <a-box position="-2 6 -5" rotation="0 0 0" color="#CCCCCC"></a-box>
      <a-box position="0 6 -5" rotation="0 0 0" color="#CCCCCC"></a-box>
      <a-box position="2 6 -5" rotation="0 0 0" color="#CCCCCC"></a-box>
    

      <a-box position="-4 4 -5" rotation="0 0 0" color="#CCCCCC"></a-box>
      <a-box position="-2 4 -5" rotation="0 0 0" color="#CCCCCC"></a-box>
      <a-box position="0 4 -5" rotation="0 0 0" color="#CCCCCC"></a-box>
      <a-box position="2 4 -5" rotation="0 0 0" color="#CCCCCC"></a-box>
      

      <a-box position="-4 2 -5" rotation="0 0 0" color="#CCCCCC"></a-box>
      <a-box position="-2 2 -5" rotation="0 0 0" color="#CCCCCC"></a-box>
      <a-box position="0 2 -5" rotation="0 0 0" color="#CCCCCC"></a-box>
      <a-box position="2 2 -5" rotation="0 0 0" color="#CCCCCC"></a-box>
      

      <a-box position="-4 0 -5" rotation="0 0 0" color="#CCCCCC"></a-box>
      <a-box position="-2 0 -5" rotation="0 0 0" color="#CCCCCC"></a-box>
      <a-box position="0 0 -5" rotation="0 0 0" color="#CCCCCC"></a-box>
      <a-box position="2 0 -5" rotation="0 0 0" color="#CCCCCC"></a-box>
    </a-entity>
  </a-entity>


  <a-plane position="0 -1 -4" rotation="-90 0 0" width="30" height="30" color="#444444"></a-plane>  
  <a-sky color="#CCCCFF"></a-sky>
  
</a-scene>
<script>
  window.xperience = {{{xperience}}}
  window.samples = {{{samples}}}
  loadXperience(xperience,samples)
</script>
